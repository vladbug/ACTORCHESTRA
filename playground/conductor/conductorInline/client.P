-file("client.erl", 1).

-module(client).

-behaviour(gen_server).

-export([start_link/1]).

-export([init/1,
         handle_call/3,
         handle_cast/2,
         handle_info/2,
         terminate/2,
         code_change/3]).

start_link(Name) ->
    gen_server:start_link({local, Name}, client, [], []).

init([]) ->
    {ok, #{}}.

handle_call({with_context, Context, Msg}, From, State) ->
    ReceiveTime = erlang:system_time(millisecond),
    io:format("[~p ms] [~p] RECEIVED with_context: ctx=~p, msg=~p~n",
              [ReceiveTime, client, Context, Msg]),
    StateWithContext = maps:put(context, Context, State),
    io:format("[~p ms] [~p] Context ~p injected, delegating message ~p~"
              "n",
              [ReceiveTime, client, Context, Msg]),
    client:handle_call(Msg, From, StateWithContext);
handle_call({context, Context}, _From, State) ->
    {reply, ok, maps:put(context, Context, State)};
handle_call(connect, _From, State) ->
    Context = maps:get(context, State, undefined),
    concurrency_logger:log(client, Context,
                           "CALLING connect to central server"),
    Reply =
        simple_wrapper:call(slow_central_server,
                            {connect, self()},
                            Context, client),
    concurrency_logger:log(client, Context,
                           io_lib:format("CONNECT result: ~p", [Reply])),
    {reply, Reply, State};
handle_call({send_number, Number}, _From, State) ->
    Context = maps:get(context, State, undefined),
    concurrency_logger:log(client, Context,
                           io_lib:format("CALLING process number ~p to "
                                         "central server",
                                         [Number])),
    Result =
        simple_wrapper:call(slow_central_server,
                            {process, self(), Number},
                            Context, client),
    concurrency_logger:log(client, Context,
                           io_lib:format("PROCESS result: ~p", [Result])),
    {reply, Result, State};
handle_call(disconnect, _From, State) ->
    Context = maps:get(context, State, undefined),
    concurrency_logger:log(client, Context,
                           "CALLING disconnect from central server"),
    Reply =
        simple_wrapper:call(slow_central_server,
                            {disconnect, self()},
                            Context, client),
    concurrency_logger:log(client, Context,
                           io_lib:format("DISCONNECT result: ~p",
                                         [Reply])),
    {reply, Reply, State}.

handle_cast(_Msg, State) ->
    {noreply, State}.

handle_info(_Info, State) ->
    {noreply, State}.

terminate(_Reason, _State) ->
    ok.

code_change(_OldVsn, State, _Extra) ->
    {ok, State}.



